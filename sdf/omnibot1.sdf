<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="robot">

    <!-- ==================== BASE FOOTPRINT ==================== -->
    <link name="base_footprint">

      <!-- Inercia y masa -->
      <inertial>
        <pose>0 0 0.08 0 0 0</pose>
        <mass>20</mass>
        <inertia>
          <ixx>2.133</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>4.266</iyy> <iyz>0</iyz>
          <izz>5.546</izz>
        </inertia>
      </inertial>

      <!-- Colisión principal -->
      <collision name="base_footprint_fixed_joint_lump__base_link_collision">
        <pose>0 0 0.105 0 0 0</pose>
        <geometry>
          <box>
            <size>0.3 0.2 0.01</size>
          </box>
        </geometry>
        <surface>
          <contact><ode/></contact>
          <friction><ode/></friction>
        </surface>
      </collision>

      <!-- Visuales -->
      <visual name="base_visual">
        <pose>0 0 0.105 0 0 0</pose>
        <geometry>
          <box><size>0.3 0.2 0.005</size></box>
        </geometry>
        <material>
          <diffuse>1 1 1 1</diffuse>
          <ambient>1 1 1 1</ambient>
        </material>
      </visual>

      <visual name="support_visual">
        <pose>0.1 0 0.125 0 0 0</pose>
        <geometry><box><size>0.07 0.076 0.03</size></box></geometry>
      </visual>

      <visual name="lidar_visual">
        <pose>0.1 0 0.23 0 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.07</length>
            <radius>0.04</radius>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0 0 0 1</diffuse>
          <ambient>0 0 0 1</ambient>
        </material>
      </visual>

      <visual name="rgbd_visual">
        <pose>0.18 0 0.14 0 0 0</pose>
        <geometry>
          <box><size>0.02 0.07 0.03</size></box>
        </geometry>
        <material>
          <diffuse>1 1 1 1</diffuse>
          <ambient>1 1 1 1</ambient>
        </material>
      </visual>

      <!-- ==================== SENSORES ==================== -->

      <!-- IMU -->
      <sensor name="imu_sensor" type="imu">
        <pose>0 0 0.08 0 0 0</pose>
        <always_on>true</always_on>
        <update_rate>50</update_rate>
        <visualize>false</visualize>
        <topic>imu</topic>
        <ignition_frame_id>base_link</ignition_frame_id>
        <imu>
          <enable_orientation>false</enable_orientation>
          <angular_velocity>
            <x><noise type="gaussian">
                 <mean>0</mean>
                 <stddev>0.009</stddev>
                 <bias_mean>0.00075</bias_mean>
                 <bias_stddev>0.005</bias_stddev>
                 <dynamic_bias_stddev>2e-05</dynamic_bias_stddev>
                 <dynamic_bias_correlation_time>400</dynamic_bias_correlation_time>
                 <precision>0.00025</precision>
              </noise>
            </x>
          <y>
            <noise type="gaussian">
                <mean>0</mean>
                <stddev>0.009</stddev>
                <bias_mean>0.00075</bias_mean>
                <bias_stddev>0.005</bias_stddev>
                <dynamic_bias_stddev>2e-05</dynamic_bias_stddev>
                <dynamic_bias_correlation_time>400</dynamic_bias_correlation_time>
                <precision>0.00025</precision>
              </noise>
            </y>
          <z>
            <noise type="gaussian">
                <mean>0</mean>
                <stddev>0.009</stddev>
                <bias_mean>0.00075</bias_mean>
                <bias_stddev>0.005</bias_stddev>
                <dynamic_bias_stddev>2e-05</dynamic_bias_stddev>
                <dynamic_bias_correlation_time>400</dynamic_bias_correlation_time>
                <precision>0.00025</precision>
              </noise>
            </z>
          </angular_velocity>
          <linear_acceleration>
            <x>
              <noise type="gaussian">
                 <mean>0</mean>
                 <stddev>0.021</stddev>
                 <bias_mean>0.05</bias_mean>
                 <bias_stddev>0.0075</bias_stddev>
                 <dynamic_bias_stddev>0.000375</dynamic_bias_stddev>
                 <dynamic_bias_correlation_time>175</dynamic_bias_correlation_time>
                 <precision>0.005</precision>
               </noise>
          </x>
         <y>  
              <noise type="gaussian">
                 <mean>0</mean>
                 <stddev>0.021</stddev>
                 <bias_mean>0.05</bias_mean>
                 <bias_stddev>0.0075</bias_stddev>
                 <dynamic_bias_stddev>0.000375</dynamic_bias_stddev>
                 <dynamic_bias_correlation_time>175</dynamic_bias_correlation_time>
                 <precision>0.005</precision>
              </noise>
          </y>
           <z>
              <noise type="gaussian">
                 <mean>0</mean>
                 <stddev>0.021</stddev>
                 <bias_mean>0.05</bias_mean>
                 <bias_stddev>0.0075</bias_stddev>
                 <dynamic_bias_stddev>0.000375</dynamic_bias_stddev>
                 <dynamic_bias_correlation_time>175</dynamic_bias_correlation_time>
                 <precision>0.005</precision>
              </noise>
            </z>
          </linear_acceleration>
        </imu>
      </sensor>

      <!-- LIDAR -->
      <sensor name="gpu_lidar" type="gpu_lidar">
        <pose>0.1 0 0.23 0 0 0</pose>
        <update_rate>10</update_rate>
        <visualize>false</visualize>
        <topic>lidar</topic>
        <ignition_frame_id>lidar_link</ignition_frame_id>
        <alwaysOn>1</alwaysOn>
        <ray>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-2.1</min_angle>
              <max_angle>2.1</max_angle>
            </horizontal>
          </scan>
          <range>
             <min>0.1</min>
             <max>40</max>
             <resolution>0.017453</resolution>
          </range>
          <noise>
             <type>gaussian</type>
             <mean>0</mean>
             <stddev>0.01</stddev>
          </noise>
        </ray>
      </sensor>

      <!-- Cámara RGBD -->
      <sensor name="rgbd_camera" type="rgbd_camera">
        <pose>0.18 0 0.14 0 0 0</pose>
        <always_on>true</always_on>
        <update_rate>10</update_rate>
        <visualize>false</visualize>
        <topic>depth_camera</topic>
        <ignition_frame_id>rgbd_frame</ignition_frame_id>
        <camera name="rgbd_frame">
          <horizontal_fov>1.0472</horizontal_fov>
          <lens>
            <intrinsics>
              <fx>277.1</fx>
              <fy>277.1</fy>
              <cx>160.5</cx>
              <cy>120.5</cy>
              <s>0</s>
            </intrinsics>
            <type>stereographic</type>
            <scale_to_hfov>true</scale_to_hfov>
          </lens>
          <distortion>
            <k1>0</k1>
            <k2>0</k2>
            <k3>0</k3>
            <p1>0</p1>
            <p2>0</p2>
            <center>0.5 0.5</center>
          </distortion>
          <image>
            <width>320</width>
            <height>240</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.01</near>
            <far>300</far>
          </clip>
          <depth_camera>
            <clip>
              <near>0.1</near>
              <far>10</far>
            </clip>
          <output>depths</output>
          </depth_camera>
          <noise>
            <type>gaussian</type>
            <mean>0</mean>
            <stddev>0.004</stddev>
          </noise>
        </camera>
      </sensor>

    </link>

    <!-- ==================== RUEDAS ==================== -->
    <!-- (aquí van las 4 ruedas con joints y links, meshes incluidos como en tu segundo código) -->

<!-- RUEDA TRASERA IZQUIERDA -->
<joint name="leftback_joint" type="revolute">
  <pose relative_to="base_footprint">-0.085 0.14 0.09 -1.570796325 0 0</pose>
  <parent>base_footprint</parent>
  <child>leftback_link</child>
  <axis>
    <xyz>0 0 1</xyz>
    <limit>
      <lower>-1e16</lower>
      <upper>1e16</upper>
    </limit>
    <dynamics>
      <spring_reference>0</spring_reference>
      <spring_stiffness>0</spring_stiffness>
    </dynamics>
  </axis>
</joint>

<link name="leftback_link">
  <pose relative_to="leftback_joint">0 0 0 0 0 0</pose>
  <inertial>
    <pose>0 0 0 0 0 0</pose>
    <mass>0.1</mass>
    <inertia>
      <ixx>6.1e-05</ixx>
      <iyy>6.1e-05</iyy>
      <izz>6.1e-05</izz>
      <ixy>0</ixy>
      <ixz>0</ixz>
      <iyz>0</iyz>
    </inertia>
  </inertial>
  <collision name="leftback_link_collision">
    <pose>0 0 0 0 0 0</pose>
    <geometry>
      <cylinder>
        <length>0.05</length>
        <radius>0.05</radius>
      </cylinder>
    </geometry>
  </collision>
  <visual name="leftback_link_visual">
    <pose>0 0 0 -1.570796325 0 0</pose>
    <geometry>
      <mesh>
        <scale>1 0.8 1</scale>
        <uri>model://ign_robots_examples/meshes/right_mecanum_wheel.dae</uri>
      </mesh>
    </geometry>
  </visual>
</link>

<!-- RUEDA DELANTERA IZQUIERDA -->
<joint name="leftfront_joint" type="revolute">
  <pose relative_to="base_footprint">0.085 0.14 0.09 -1.570796325 0 0</pose>
  <parent>base_footprint</parent>
  <child>leftfront_link</child>
  <axis>
    <xyz>0 0 1</xyz>
    <limit>
      <lower>-1e16</lower>
      <upper>1e16</upper>
    </limit>
    <dynamics>
      <spring_reference>0</spring_reference>
      <spring_stiffness>0</spring_stiffness>
    </dynamics>
  </axis>
</joint>

<link name="leftfront_link">
  <pose relative_to="leftfront_joint">0 0 0 0 0 0</pose>
  <inertial>
    <pose>0 0 0 0 0 0</pose>
    <mass>0.1</mass>
    <inertia>
      <ixx>6.1e-05</ixx>
      <iyy>6.1e-05</iyy>
      <izz>6.1e-05</izz>
      <ixy>0</ixy>
      <ixz>0</ixz>
      <iyz>0</iyz>
    </inertia>
  </inertial>
  <collision name="leftfront_link_collision">
    <pose>0 0 0 0 0 0</pose>
    <geometry>
      <cylinder>
        <length>0.05</length>
        <radius>0.05</radius>
      </cylinder>
    </geometry>
  </collision>
  <visual name="leftfront_link_visual">
    <pose>0 0 0 -1.570796325 0 0</pose>
    <geometry>
      <mesh>
        <scale>1 0.8 1</scale>
        <uri>model://ign_robots_examples/meshes/left_mecanum_wheel.dae</uri>
      </mesh>
    </geometry>
  </visual>
</link>

<!-- RUEDA TRASERA DERECHA -->
<joint name="rightback_joint" type="revolute">
  <pose relative_to="base_footprint">-0.085 -0.14 0.09 -1.570796325 0 0</pose>
  <parent>base_footprint</parent>
  <child>rightback_link</child>
  <axis>
    <xyz>0 0 1</xyz>
    <limit>
      <lower>-1e16</lower>
      <upper>1e16</upper>
    </limit>
    <dynamics>
      <spring_reference>0</spring_reference>
      <spring_stiffness>0</spring_stiffness>
    </dynamics>
  </axis>
</joint>

<link name="rightback_link">
  <pose relative_to="rightback_joint">0 0 0 0 0 0</pose>
  <inertial>
    <pose>0 0 0 0 0 0</pose>
    <mass>0.1</mass>
    <inertia>
      <ixx>6.1e-05</ixx>
      <iyy>6.1e-05</iyy>
      <izz>6.1e-05</izz>
      <ixy>0</ixy>
      <ixz>0</ixz>
      <iyz>0</iyz>
    </inertia>
  </inertial>
  <collision name="rightback_link_collision">
    <pose>0 0 0 0 0 0</pose>
    <geometry>
      <cylinder>
        <length>0.05</length>
        <radius>0.05</radius>
      </cylinder>
    </geometry>
  </collision>
  <visual name="rightback_link_visual">
    <pose>0 0 0 -1.570796325 0 0</pose>
    <geometry>
      <mesh>
        <scale>1 0.8 1</scale>
        <uri>model://ign_robots_examples/meshes/left_mecanum_wheel.dae</uri>
      </mesh>
    </geometry>
  </visual>
</link>

<!-- RUEDA DELANTERA DERECHA -->
<joint name="rightfront_joint" type="revolute">
  <pose relative_to="base_footprint">0.085 -0.14 0.09 -1.570796325 0 0</pose>
  <parent>base_footprint</parent>
  <child>rightfront_link</child>
  <axis>
    <xyz>0 0 1</xyz>
    <limit>
      <lower>-1e16</lower>
      <upper>1e16</upper>
    </limit>
    <dynamics>
      <spring_reference>0</spring_reference>
      <spring_stiffness>0</spring_stiffness>
    </dynamics>
  </axis>
</joint>

<link name="rightfront_link">
  <pose relative_to="rightfront_joint">0 0 0 0 0 0</pose>
  <inertial>
    <pose>0 0 0 0 0 0</pose>
    <mass>0.1</mass>
    <inertia>
      <ixx>6.1e-05</ixx>
      <iyy>6.1e-05</iyy>
      <izz>6.1e-05</izz>
      <ixy>0</ixy>
      <ixz>0</ixz>
      <iyz>0</iyz>
    </inertia>
  </inertial>
  <collision name="rightfront_link_collision">
    <pose>0 0 0 0 0 0</pose>
    <geometry>
      <cylinder>
        <length>0.05</length>
        <radius>0.05</radius>
      </cylinder>
    </geometry>
  </collision>
  <visual name="rightfront_link_visual">
    <pose>0 0 0 -1.570796325 0 0</pose>
    <geometry>
      <mesh>
        <scale>1 0.8 1</scale>
        <uri>model://ign_robots_examples/meshes/right_mecanum_wheel.dae</uri>
      </mesh>
    </geometry>
  </visual>
</link>


    <!-- ==================== PLUGINS ==================== -->
    <plugin name="ignition::gazebo::systems::MecanumDrive"
            filename="ignition-gazebo-mecanum-drive-system">
      <front_left_joint>leftfront_joint</front_left_joint>
      <front_right_joint>rightfront_joint</front_right_joint>
      <back_left_joint>leftback_joint</back_left_joint>
      <back_right_joint>rightback_joint</back_right_joint>
      <wheel_separation>0.085</wheel_separation>
      <wheelbase>0.14</wheelbase>
      <wheel_radius>0.05</wheel_radius>
      <min_acceleration>-5</min_acceleration>
      <max_acceleration>5</max_acceleration>
    </plugin>

    <plugin name="ignition::gazebo::systems::OdometryPublisher"
            filename="ignition-gazebo-odometry-publisher-system">
      <dimensions>3</dimensions>
      <robot_base_frame>base_footprint</robot_base_frame>
    </plugin>

    <plugin name="ignition::gazebo::systems::JointStatePublisher"
            filename="ignition-gazebo-joint-state-publisher-system"/>

    <!-- ==================== FRAMES ==================== -->
    <frame name="lidar_joint" attached_to="base_link">
      <pose>0.1 0 0.15 0 0 0</pose>
    </frame>
    <frame name="lidar_link" attached_to="lidar_joint"/>

    <frame name="rgbd_joint" attached_to="base_link">
      <pose>0.18 0 0.06 0 0 0</pose>
    </frame>
    <frame name="rgbd_frame" attached_to="rgbd_joint"/>

    <frame name="base_joint" attached_to="base_footprint">
      <pose>0 0 0.08 0 0 0</pose>
    </frame>
    <frame name="base_link" attached_to="base_joint"/>

  </model>
</sdf>
